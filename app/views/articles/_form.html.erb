<% if @article.errors.any? %>
  <h2>The following errors have prevented the article from getting updated.</h2>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>

  <p><%= f.label :description %></p>
  <p><%= f.text_field :description %></p>

  <%= f.submit %>%>
<% end %>

<%= link_to "Back to articles listing", articles_path %>